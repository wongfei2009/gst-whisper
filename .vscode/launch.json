{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug 'gstwhisper'",
            "program": "gst-launch-1.0",
            "args": [
                "filesrc",
                "location=../whisper.cpp/samples/jfk.wav",
                "!",
                "decodebin",
                "!",
                "tee",
                "name=t",
                "!",
                "queue",
                "max-size-time=0",
                "max-size-bytes=0",
                "max-size-buffers=0",
                "!",
                "audioconvert",
                "!",
                "audiobuffersplit",
                "!",
                "audioconvert",
                "!",
                "audioresample",
                "!",
                "whisper",
                "!",
                "textrender",
                "!",
                "videoconvert",
                "!",
                "osxvideosink",
                "t.",
                "!",
                "queue",
                "max-size-time=0",
                "max-size-bytes=0",
                "max-size-buffers=0",
                "!",
                "audioconvert",
                "!",
                "audioresample",
                "!",
                "autoaudiosink"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "GST_PLUGIN_PATH": "${workspaceFolder}/target/x86_64-apple-darwin/debug",
                "WHISPER_MODEL_PATH": "${workspaceFolder}/../whisper.cpp/models/ggml-base.en.bin",
                "GST_DEBUG": "2,whisper:4",
                "GST_DEBUG_DUMP_DOT_DIR": "/tmp/"
            }
        }
    ]
}