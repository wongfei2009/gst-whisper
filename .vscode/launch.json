{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug 'gstwhisper' using file source",
            "program": "gst-launch-1.0",
            "args": [
                "filesrc",
                "location=../whisper.cpp/samples/jfk.wav",
                "!",
                "decodebin",
                "!",
                "tee",
                "name=t",
                "t.",
                "!",
                "queue",
                "max-size-time=0",
                "max-size-bytes=0",
                "max-size-buffers=0",
                "!",
                "audioconvert",
                "!",
                "autoaudiosink",
                "t.",
                "!",
                "queue",
                "max-size-time=0",
                "max-size-bytes=0",
                "max-size-buffers=0",
                "!",
                "audioconvert",
                "!",
                "wavescope",
                "!",
                "video/x-raw,width=960,height=540",
                "!",
                "textoverlay",
                "name=o",
                "!",
                "videoconvert",
                "!",
                "osxvideosink",
                "t.",
                "!",
                "queue",
                "max-size-time=0",
                "max-size-bytes=0",
                "max-size-buffers=0",
                "!",
                "audioconvert",
                "!",
                "audioresample",
                "!",
                "audio/x-raw,format=S16LE,channels=1,rate=16000",
                "!",
                "audiobuffersplit",
                "output-buffer-duration=1/100",
                "!",
                "audioconvert",
                "!",
                "whisper",
                "language=en",
                "pts-offset-ms=0",
                "!",
                "o.",
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "GST_PLUGIN_PATH": "${workspaceFolder}/target/x86_64-apple-darwin/debug",
                "WHISPER_MODEL_PATH": "${workspaceFolder}/../whisper.cpp/models/ggml-base.en.bin",
                "GST_DEBUG": "2,whisper:4",
                "GST_DEBUG_DUMP_DOT_DIR": "/tmp/"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug 'gstwhisper' using microphone",
            "program": "gst-launch-1.0",
            "args": [
                "osxaudiosrc",
                "device=125",
                "!",
                "audioconvert",
                "!",
                "audioresample",
                "!",
                "audiornnoise",
                "voice-activity-threshold=0.8",
                "!",
                "audioconvert",
                "!",
                "audioresample",
                "!",
                "audio/x-raw,format=S16LE,channels=1,rate=16000,layout=non-interleaved",
                "!",
                "queue",
                "max-size-time=0",
                "max-size-bytes=0",
                "max-size-buffers=0",
                "!",
                "whisper",
                "language=en",
                "do-timestamp=true",
                "pts-offset-ms=500",
                "!",
                "textrender",
                "font-desc=Sans, 18",
                "!",
                "video/x-raw,width=960,height=540",
                "!",
                "videoconvert",
                "!",
                "osxvideosink",
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "GST_PLUGIN_PATH": "${workspaceFolder}/target/x86_64-apple-darwin/debug",
                "WHISPER_MODEL_PATH": "${workspaceFolder}/../whisper.cpp/models/ggml-base.en.bin",
                "GST_DEBUG": "2,whisper:4",
                "GST_DEBUG_DUMP_DOT_DIR": "/tmp/"
            }
        }
    ]
}